<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:background="#512DA8"
    tools:context="com.example.android.smartgoals.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="#fff"
                android:textSize="24dp"
                android:text="SMART GOALS!"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="96dp"
                android:onClick="specific"
                android:background="#80DEEA"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#fff"
                android:textSize="24dp"
                android:id="@+id/specific"
                android:text="SPECIFIC"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="96dp"
                android:onClick="measurable"
                android:background="#80DEEA"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#fff"
                android:textSize="24dp"
                android:id="@+id/measurable"
                android:text="MEASURABLE"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="96dp"
                android:onClick="achievable"
                android:background="#80DEEA"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#fff"
                android:textSize="24dp"
                android:text="ACHIEVABLE"
                android:id="@+id/achievable"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R"
                android:textSize="96dp"
                android:onClick="relevant"
                android:background="#80DEEA"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#fff"
                android:textSize="24dp"
                android:id="@+id/relevant"
                android:text="RELEVANT"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T"
                android:textSize="96dp"
                android:onClick="timeBound"
                android:background="#80DEEA"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#fff"
                android:textSize="24dp"
                android:id="@+id/timeBound"
                android:text="TIME-BOUND"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
